                    android:layout_rowWeight="1"/>
            </GridLayout>
        </LinearLayout>

        <!-- PROJECTS SECTION -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginTop="12dp"
