        </RelativeLayout>

        <!-- SKILLS SECTION -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:padding="16dp">

            <!-- Using AbsoluteLayout for Skills header positioning -->
            <AbsoluteLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
